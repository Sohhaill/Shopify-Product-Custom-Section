<script>
  document.querySelectorAll('.sh_sizes').forEach((shSizeEl, index) => {
    shSizeEl.addEventListener('click', () => {
      const sizedropEl = shSizeEl.nextElementSibling;
      const currentIcon = shSizeEl.querySelector('.size_dropdown_sh img');

      const allSizedrops = document.querySelectorAll('.sizedrop');
      const allIcons = document.querySelectorAll('.size_dropdown_sh img');

      
      allIcons.forEach(icon => icon.style.transform = 'rotate(0deg)');

      if (sizedropEl.style.display === 'block') {
        sizedropEl.style.display = 'none';
        currentIcon.style.transform = 'rotate(0deg)';
      } else {
        sizedropEl.style.display = 'block';
        currentIcon.style.transform = 'rotate(180deg)';
      }
    });
  });
  document.querySelectorAll('.sh_plus_icon').forEach(item => {
    item.addEventListener('click', () => {
      document.querySelector('.sh_popup_main').style.display = 'flex';
    });
  });

  document.querySelector('.sh_close').addEventListener('click', () => {
    document.querySelector('.sh_popup_main').style.display = 'none';
  });


</script>



